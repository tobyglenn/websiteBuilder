---
import Layout from '../layouts/Layout.astro';
import { VIDEOS, BLOG_POSTS } from '../data/mock.js';
import { Search as SearchIcon, Play, FileText } from 'lucide-react';

const query = Astro.url.searchParams.get('q') || '';
const lowerQuery = query.toLowerCase();

// Filter Videos
const videoResults = VIDEOS.filter(video => 
    video.title.toLowerCase().includes(lowerQuery) || 
    video.description.toLowerCase().includes(lowerQuery) ||
    video.tags.some(tag => tag.toLowerCase().includes(lowerQuery))
);

// Filter Blog Posts
const blogResults = BLOG_POSTS.filter(post => 
    post.title.toLowerCase().includes(lowerQuery) || 
    post.content.toLowerCase().includes(lowerQuery) ||
    post.excerpt.toLowerCase().includes(lowerQuery)
);

const totalResults = videoResults.length + blogResults.length;
---

<Layout title={`Search Results for "${query}"`}>
  <div class="container mx-auto px-4 py-16 min-h-[60vh]">
    
    <div class="mb-12 border-b border-neutral-800 pb-8">
        <h1 class="text-3xl md:text-4xl font-bold mb-4 flex items-center gap-3">
            <SearchIcon size={32} class="text-blue-500" />
            Search Results
        </h1>
        {query ? (
            <p class="text-neutral-400 text-lg">
                Found <span class="text-white font-bold">{totalResults}</span> results for "<span class="text-white italic">{query}</span>"
            </p>
        ) : (
            <p class="text-neutral-400 text-lg">Please enter a search term.</p>
        )}
    </div>

    {/* No Results */}
    {query && totalResults === 0 && (
        <div class="text-center py-12 bg-neutral-900/50 rounded-xl border border-neutral-800 border-dashed">
            <p class="text-neutral-500 text-lg">No matches found. Try a different keyword.</p>
        </div>
    )}

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        {/* Video Results */}
        {videoResults.length > 0 && (
            <div>
                <h2 class="text-2xl font-bold mb-6 flex items-center gap-2 text-white">
                    <Play class="text-red-500 fill-red-500" size={20} /> Videos
                </h2>
                <div class="space-y-6">
                    {videoResults.map(video => (
                        <a href={`/video/${video.id}`} class="flex gap-4 group bg-neutral-900/50 p-4 rounded-xl border border-neutral-800/50 hover:border-neutral-700 hover:bg-neutral-900 transition-all">
                            <div class="relative w-40 flex-shrink-0 aspect-video rounded-lg overflow-hidden bg-neutral-800">
                                <img src={video.thumbnail} alt={video.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform" />
                            </div>
                            <div class="flex-1 min-w-0">
                                <h3 class="text-lg font-bold text-white mb-1 line-clamp-1 group-hover:text-blue-400 transition-colors">{video.title}</h3>
                                <p class="text-sm text-neutral-400 line-clamp-2 mb-2">{video.description}</p>
                                <span class="text-xs text-neutral-500">{new Date(video.published_at).toLocaleDateString()}</span>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        )}

        {/* Blog Results */}
        {blogResults.length > 0 && (
            <div>
                <h2 class="text-2xl font-bold mb-6 flex items-center gap-2 text-white">
                    <FileText class="text-blue-500" size={20} /> Articles
                </h2>
                <div class="space-y-6">
                    {blogResults.map(post => (
                        <a href={`/blog/${post.slug}`} class="flex gap-4 group bg-neutral-900/50 p-4 rounded-xl border border-neutral-800/50 hover:border-neutral-700 hover:bg-neutral-900 transition-all">
                            <div class="flex-1">
                                <span class="text-xs font-bold text-blue-500 uppercase tracking-wider mb-1 block">{post.category}</span>
                                <h3 class="text-lg font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">{post.title}</h3>
                                <p class="text-sm text-neutral-400 line-clamp-2 mb-3">{post.excerpt}</p>
                                <span class="text-xs text-neutral-500 flex items-center gap-1">
                                    Read Analysis &rarr;
                                </span>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        )}

    </div>
  </div>
</Layout>
