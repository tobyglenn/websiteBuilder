---
import Layout from '../layouts/Layout.astro';
import { RECENT_NIGHTS, INSIGHTS, TOTAL_NIGHTS, AVG_SLEEP_SCORE, AVG_HOURS, AVG_HRV } from '../data/sleep.js';

function testChart(data) {
  const PAD = { l: 50, r: 20, t: 20, b: 40 };
  const cw = 780 - PAD.l - PAD.r;
  const ch = 200 - PAD.t - PAD.b;
  const n = data.length;
  if (n === 0) return '';
  
  const maxS = 100;
  const minS = 0;
  const range = maxS - minS;
  
  const points = data.map((d, i) => {
    const x = PAD.l + (i / (n - 1)) * cw;
    const y = PAD.t + ch - ((d.score - minS) / range) * ch;
    return `${x},${y}`;
  }).join(' ');
  
  return `<svg viewBox="0 0 780 200">
    <polyline points="${points}" fill="none" stroke="#3b82f6" stroke-width="2" />
  </svg>`;
}

function hoursChart(data) {
  const PAD = { l: 50, r: 20, t: 10, b: 30 };
  const cw = 780 - PAD.l - PAD.r;
  const ch = 120 - PAD.t - PAD.b;
  const n = data.length;
  if (n === 0) return '';
  
  const maxH = Math.max(...data.map(d => d.hours), 8);
  const bw = cw / n;
  const gap = bw * 0.15;
  
  const bars = data.map((d, i) => {
    const x = PAD.l + i * bw + gap;
    const w = bw - gap * 2;
    const h = (d.hours / maxH) * ch;
    const y = PAD.t + ch - h;
    return `<rect x="${x}" y="${y}" width="${w}" height="${h}" class="fill-emerald-500" rx="2" />`;
  }).join('');
  
  return `<svg viewBox="0 0 780 120">${bars}</svg>`;
}

function qualityDonut(W=160, H=160) {
  const cx = W / 2;
  const cy = H / 2;
  const r = 50;
  const stroke = 12;
  
  const stages = [
    { pct: 20, color: '#8b5cf6', label: 'Deep' },
    { pct: 55, color: '#3b82f6', label: 'Light' },
    { pct: 22, color: '#06b6d4', label: 'REM' },
    { pct: 3, color: '#ef4444', label: 'Awake' },
  ];
  
  let offset = 0;
  const segments = stages.map(s => {
    const len = (s.pct / 100) * 2 * Math.PI * r;
    const seg = `<circle 
      cx="${cx}" cy="${cy}" r="${r}" 
      fill="none" stroke="${s.color}" stroke-width="${stroke}"
      stroke-dasharray="${len} ${2 * Math.PI * r - len}"
      stroke-dashoffset="${-offset}"
      transform="rotate(-90 ${cx} ${cy})"
    />`;
    offset += len;
    return seg;
  }).join('');
  
  const legend = stages.map(s => `
    <div class="flex items-center gap-2">
      <div class="w-3 h-3 rounded-full" style="background: ${s.color}"></div>
      <span class="text-xs text-neutral-400">${s.label} ${s.pct}%</span>
    </div>
  `).join('');
  
  return { svg: `<svg viewBox="0 0 ${W} ${H}">${segments}</svg>`, legend };
}

const chart = testChart(RECENT_NIGHTS);
const hoursSvg = hoursChart(RECENT_NIGHTS);
const { svg: qualitySvg, legend: qualityLegend } = qualityDonut();
