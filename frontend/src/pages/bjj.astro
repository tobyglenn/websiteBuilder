---
import Layout from '../layouts/Layout.astro';
import {
  beltTimeline,
  competitionRecord,
  signatureMoves,
  trainingPhilosophy,
  bjjVideos,
  bjjStats,
} from '../data/bjj.js';

const beltColors = {
  White: '#d1d5db',
  Blue: '#3b82f6',
  Purple: '#8b5cf6',
  Brown: '#b45309',
};
---

<Layout
  title="BJJ Journey: Brown Belt â€” TobyOnFitnessTech"
  description="Toby Peters is a Brazilian Jiu-Jitsu brown belt â€” 10+ years of training, 3 competition medals (including a reverse triangle win at brown belt), and 20+ videos covering BJJ belt culture, technique, and training philosophy."
>
  <main class="min-h-screen bg-neutral-950 text-white">

    {/* â”€â”€ Hero â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
    <section class="pt-28 pb-14 md:pt-36 md:pb-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-amber-900/10 via-transparent to-transparent pointer-events-none" />
      <div class="absolute right-0 top-0 w-72 h-72 bg-amber-700/5 rounded-full blur-3xl pointer-events-none" />
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl">
          <p class="text-xs font-bold tracking-widest text-amber-500 uppercase mb-4">ğŸ¥‹ Brazilian Jiu-Jitsu</p>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
            Brown Belt.<br />
            <span class="text-amber-500">Still Learning.</span>
          </h1>
          <p class="text-xl text-neutral-400 mb-10 leading-relaxed max-w-2xl">
            10+ years on the mat. Competed at white, blue, and brown belt. 
            3rd place at brown â€” won via reverse triangle. Nearly had my neck snapped 
            by a concrete-throwing blue belt in overtime. That's jiu-jitsu.
          </p>

          {/* Stat pills */}
          <div class="flex flex-wrap gap-3">
            <div class="flex items-center gap-2 bg-neutral-900 border border-neutral-800 rounded-full px-4 py-2">
              <span class="w-3 h-3 rounded-full bg-amber-600 inline-block flex-shrink-0"></span>
              <span class="text-sm font-semibold text-white">Brown Belt</span>
            </div>
            <div class="flex items-center gap-2 bg-neutral-900 border border-neutral-800 rounded-full px-4 py-2">
              <span class="text-sm font-semibold text-white">10+ Years Training</span>
            </div>
            <div class="flex items-center gap-2 bg-neutral-900 border border-neutral-800 rounded-full px-4 py-2">
              <span class="text-sm font-semibold text-white">3 Competition Medals</span>
            </div>
            <div class="flex items-center gap-2 bg-neutral-900 border border-neutral-800 rounded-full px-4 py-2">
              <span class="text-sm font-semibold text-white">Gi & No-Gi</span>
            </div>
            <div class="flex items-center gap-2 bg-neutral-900 border border-neutral-800 rounded-full px-4 py-2">
              <span class="text-sm font-semibold text-amber-400">Signature: Reverse Triangle</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* â”€â”€ Belt Timeline â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <p class="text-xs font-bold tracking-widest text-amber-500 uppercase mb-2">The Journey</p>
          <h2 class="text-3xl md:text-4xl font-bold mb-10">Belt Timeline</h2>

          <div class="space-y-0">
            {beltTimeline.map((entry, i) => (
              <div class="relative flex gap-6 md:gap-10">
                {/* Vertical line + belt dot */}
                <div class="flex flex-col items-center flex-shrink-0 w-10">
                  <div
                    class={`w-5 h-5 rounded-full border-4 border-neutral-950 flex-shrink-0 mt-1 ${entry.current ? 'ring-2 ring-amber-500 ring-offset-2 ring-offset-neutral-950' : ''}`}
                    style={`background-color: ${beltColors[entry.belt]};`}
                  />
                  {i < beltTimeline.length - 1 && (
                    <div class="flex-1 w-0.5 bg-neutral-800 mt-1 mb-0 min-h-[80px]" />
                  )}
                </div>

                {/* Content card */}
                <div class={`pb-10 flex-1 ${entry.current ? 'border border-amber-700/40 bg-amber-900/5 rounded-xl p-5 -mt-1' : ''}`}>
                  <div class="flex items-center gap-3 mb-1 flex-wrap">
                    <span
                      class="text-xs font-bold uppercase tracking-wider px-2.5 py-0.5 rounded-full"
                      style={`background-color: ${beltColors[entry.belt]}22; color: ${beltColors[entry.belt]};`}
                    >
                      {entry.belt} Belt
                    </span>
                    <span class="text-sm text-neutral-500">{entry.period}</span>
                    {entry.current && (
                      <span class="text-xs bg-amber-500/20 text-amber-400 px-2 py-0.5 rounded-full font-semibold">Current</span>
                    )}
                    {!entry.competed && (
                      <span class="text-xs bg-neutral-800 text-neutral-400 px-2 py-0.5 rounded-full">Coaching focus â€” didn't compete</span>
                    )}
                  </div>

                  <ul class="mt-3 space-y-1.5">
                    {entry.highlights.map(h => (
                      <li class="flex items-start gap-2 text-sm text-neutral-300">
                        <span class="text-amber-600 mt-0.5 flex-shrink-0">â–¸</span>
                        <span>{h}</span>
                      </li>
                    ))}
                  </ul>

                  {entry.note && (
                    <p class="mt-3 text-xs text-neutral-500 italic">{entry.note}</p>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    {/* â”€â”€ Competition Record â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
    <section class="py-16 md:py-20 bg-neutral-900/40 border-y border-neutral-800">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <p class="text-xs font-bold tracking-widest text-amber-500 uppercase mb-2">On the Competition Mat</p>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Competition Record</h2>
          <p class="text-neutral-400 mb-10 max-w-2xl">
            Competed at white, blue, and brown belt (skipped purple â€” was coaching full-time). 
            Took a medal at every belt entered. Believe in validating your belt on a live mat against strangers.
          </p>

          <div class="grid md:grid-cols-3 gap-4 mb-10">
            {competitionRecord.highlights.map(comp => (
              <div class="bg-neutral-900 border border-neutral-800 rounded-xl p-5 text-center hover:border-amber-700/50 transition-colors">
                <div class="text-4xl mb-2">{comp.icon}</div>
                <div class="text-sm text-neutral-400 mb-1">{comp.belt} Belt</div>
                <div class="text-xl font-bold text-white">{comp.result}</div>
                {comp.detail && (
                  <p class="text-xs text-neutral-500 mt-2 leading-relaxed">{comp.detail}</p>
                )}
              </div>
            ))}
          </div>

          {/* Brown belt story */}
          <div class="bg-neutral-900 border border-amber-700/30 rounded-2xl p-6 md:p-8">
            <h3 class="text-lg font-bold mb-3 text-amber-400">The Brown Belt Tournament</h3>
            <p class="text-neutral-300 text-sm leading-relaxed mb-3">
              Came back to competition to set an example for a student I was pushing to compete. 
              Couldn't tell someone else to get out there without doing it myself â€” so I entered Gi, No-Gi, 
              and the Absolute Cash Prize division.
            </p>
            <p class="text-neutral-300 text-sm leading-relaxed mb-3">
              In the Absolute, a No-Gi specialist blue belt launched me off the circle onto <em class="text-white">concrete</em> for 
              his first takedown. I bounced, got up, and lost in overtime when I ran out of gas. 
              First tournament in years with no proper training camp â€” fair result.
            </p>
            <p class="text-neutral-300 text-sm leading-relaxed">
              In Gi: beat a competition black belt with a deep double leg and positional dominance (he wasn't expecting it at my size). 
              Won my other matches including a <strong class="text-amber-400">reverse triangle from inside control</strong> â€” 
              down 0-12 on points, less than a minute left. Hit the omoplata-reversal and got the tap. 
              <strong class="text-white">3rd place overall.</strong>
            </p>
          </div>
        </div>
      </div>
    </section>

    {/* â”€â”€ Signature Moves â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <p class="text-xs font-bold tracking-widest text-amber-500 uppercase mb-2">Technique</p>
          <h2 class="text-3xl md:text-4xl font-bold mb-10">Game Highlights</h2>

          <div class="grid md:grid-cols-3 gap-4">
            {signatureMoves.map(move => (
              <div class="bg-neutral-900 border border-neutral-800 rounded-xl p-5 hover:border-amber-700/40 transition-colors">
                <h3 class="font-bold text-white mb-2">{move.name}</h3>
                <p class="text-sm text-neutral-400 leading-relaxed mb-3">{move.description}</p>
                <div class="flex flex-wrap gap-1.5">
                  {move.tags.map(tag => (
                    <span class="text-xs bg-neutral-800 text-neutral-400 px-2 py-0.5 rounded-full">{tag}</span>
                  ))}
                </div>
              </div>
            ))}
          </div>

          {/* Weight context */}
          <div class="mt-6 bg-neutral-900/50 border border-neutral-800 rounded-xl p-5 flex flex-col md:flex-row gap-4 md:items-center">
            <div class="text-3xl">âš–ï¸</div>
            <div>
              <p class="text-sm text-neutral-300 leading-relaxed">
                <strong class="text-white">Currently competing at ~220 lbs.</strong> The game adapts â€” cartwheel passes 
                get shelved, explosive drops become more deliberate, and neck-risk attacks (like the flying triangle off standing opponents) 
                get used sparingly. Size-aware training is real training.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* â”€â”€ Training Philosophy â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
    <section class="py-16 md:py-20 bg-neutral-900/40 border-y border-neutral-800">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <p class="text-xs font-bold tracking-widest text-amber-500 uppercase mb-2">How I Think About BJJ</p>
          <h2 class="text-3xl md:text-4xl font-bold mb-10">Training Philosophy</h2>

          <div class="grid md:grid-cols-2 gap-4">
            {trainingPhilosophy.map(item => (
              <div class="bg-neutral-900 border border-neutral-800 rounded-xl p-6 hover:border-amber-700/30 transition-colors">
                <div class="text-2xl mb-3">{item.icon}</div>
                <h3 class="font-bold text-white mb-2">{item.title}</h3>
                <p class="text-sm text-neutral-400 leading-relaxed">{item.body}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    {/* â”€â”€ BJJ Videos â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <p class="text-xs font-bold tracking-widest text-amber-500 uppercase mb-2">On Camera</p>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">BJJ Commentary & Analysis</h2>
          <p class="text-neutral-400 mb-10 max-w-xl">
            20+ videos on belt culture, training philosophy, and the politics of BJJ promotion â€” from someone who's lived all four belts.
          </p>

          <div class="grid md:grid-cols-2 gap-4">
            {bjjVideos.map(video => (
              <a
                href={`/video/${video.id}`}
                class="group bg-neutral-900 border border-neutral-800 rounded-xl overflow-hidden hover:border-amber-700/50 transition-colors block"
              >
                <div class="aspect-video relative overflow-hidden bg-neutral-800">
                  <img
                    src={`https://img.youtube.com/vi/${video.id}/mqdefault.jpg`}
                    alt={video.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors flex items-center justify-center">
                    <div class="w-12 h-12 bg-amber-600/90 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                      <svg class="w-5 h-5 text-white ml-1" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </div>
                  </div>
                </div>
                <div class="p-4">
                  <h3 class="font-semibold text-white text-sm mb-1.5 group-hover:text-amber-400 transition-colors leading-snug">{video.title}</h3>
                  <p class="text-xs text-neutral-500 leading-relaxed">{video.description}</p>
                </div>
              </a>
            ))}
          </div>

          <div class="mt-6 text-center">
            <a
              href="/videos"
              class="inline-flex items-center gap-2 text-sm text-amber-500 hover:text-amber-400 transition-colors font-medium"
            >
              See all BJJ videos on the channel
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    {/* â”€â”€ Belt Promotion Take â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
    <section class="py-16 md:py-20 bg-neutral-900/40 border-y border-neutral-800">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <p class="text-xs font-bold tracking-widest text-amber-500 uppercase mb-4">Hot Take</p>
          <blockquote class="text-2xl md:text-3xl font-bold leading-snug text-white mb-6">
            "If I had lost every match at that tournament, there's no way I could accept my black belt â€” 
            until I went back and rectified it."
          </blockquote>
          <p class="text-neutral-400 leading-relaxed mb-6">
            Belt promotions should mean something. Not gatekeeping â€” there are valid reasons 
            someone can't compete (age, family, injury). But if you <em class="text-white">can</em> compete 
            and won't, your belt deserves scrutiny. That applies at every level, including black.
          </p>
          <p class="text-neutral-400 leading-relaxed">
            Watched Mike Israetel compete as a brown belt at a Northeast tournament three years before 
            the internet decided he wasn't legit. His coach had a blue belt who handled my best student. 
            The criticism of his black belt from people who don't train jiu-jitsu? 
            <strong class="text-white"> They don't know what they're talking about.</strong>
          </p>
          <div class="mt-8">
            <a
              href="/blog/mike-israetel-bjj-black-belt-defence"
              class="inline-flex items-center gap-2 text-sm bg-amber-700/20 text-amber-400 border border-amber-700/30 rounded-full px-5 py-2.5 hover:bg-amber-700/30 transition-colors font-medium"
            >
              Read: My Full Take on the Israetel Black Belt Controversy
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    {/* â”€â”€ CTA â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <p class="text-xs font-bold tracking-widest text-amber-500 uppercase mb-4">Follow the Journey</p>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">The Black Belt Is Coming.<br />Eventually.</h2>
          <p class="text-neutral-400 mb-8 leading-relaxed max-w-xl mx-auto">
            Training through a broken finger, pushing 220 lbs, and still planning that next competition. 
            All of it â€” on camera. Unscripted.
          </p>
          <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a
              href="/videos"
              class="px-6 py-3 bg-amber-600 hover:bg-amber-700 text-white rounded-xl font-semibold transition-colors text-sm"
            >
              Watch BJJ Videos
            </a>
            <a
              href="/training"
              class="px-6 py-3 bg-neutral-800 hover:bg-neutral-700 text-white rounded-xl font-semibold transition-colors text-sm border border-neutral-700"
            >
              Full Training Dashboard
            </a>
            <a
              href="/about"
              class="px-6 py-3 bg-neutral-800 hover:bg-neutral-700 text-white rounded-xl font-semibold transition-colors text-sm border border-neutral-700"
            >
              About Toby
            </a>
          </div>
        </div>
      </div>
    </section>

  </main>
</Layout>
