---
import Layout from '../../layouts/Layout.astro';
import VideoGrid from '../../components/VideoGrid.jsx';

const title = "All Videos - Toby on Fitness Tech";
const description = "Browse all 104 videos covering Speediance reviews, BJJ commentary, fitness tech deep-dives, and transformation content.";
---

<Layout title={title} description={description}>
  <div class="container mx-auto px-4 py-12">
    <div class="flex flex-col mb-12 border-b border-neutral-800 pb-8">
      <h1 class="text-4xl font-bold mb-4">Video Library</h1>
      <p class="text-neutral-400 max-w-2xl">
        104 videos covering Speediance reviews, BJJ commentary, fitness tech deep-dives, and real transformation content. Use the filters below to find what you're looking for.
      </p>
    </div>

    <VideoGrid client:load showFilters={true} />
  </div>
</Layout>
