---
import Layout from '../../layouts/Layout.astro';
import VideoGrid from '../../components/VideoGrid.jsx';

const title = "All Videos - Toby on Fitness Tech";
const description = "Browse all 104 videos covering Speediance reviews, BJJ commentary, fitness tech deep-dives, and transformation content.";
---

<Layout title={title} description={description}>
    <!-- Hero -->
    <section class="bg-neutral-950 border-b border-neutral-800">
      <div class="container mx-auto px-4 py-10 md:py-14 max-w-3xl text-center">
        <p class="text-blue-500 text-xs font-bold uppercase tracking-widest mb-4">VIDEO LIBRARY</p>
        <h1 class="text-4xl md:text-5xl font-black text-white leading-tight mb-4">
          Everything on Camera.<br class="hidden md:block" />
          <span class="text-neutral-400">No Scripts. No Sponsors.</span>
        </h1>
        <p class="text-neutral-400 text-base leading-relaxed max-w-2xl mx-auto">
          104 videos covering Speediance reviews, BJJ commentary, fitness tech deep-dives, and real transformation data. Filter by topic below.
        </p>
      </div>
    </section>
    <!-- Grid -->
    <div class="container mx-auto px-4 py-10">
      <VideoGrid client:load showFilters={true} />
    </div>
  </Layout>
