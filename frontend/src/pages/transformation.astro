// Transformation page data
import Layout from '../layouts/Layout.astro';

const transformationData = {
  startWeight: 242,
  lowestWeight: 188,
  currentWeight: 218,
  startDate: "July 2023",
  lowestDate: "January 2024",
  currentDate: "February 2026",
  durationMonths: 6,
  weightLost: 54,
  muscleGained: 30,
  // Key milestones
  milestones: [
    {
      date: "July 2023",
      weight: 242,
      event: "Started transformation journey"
    },
    {
      date: "September 2023",
      weight: 220,
      event: "GLP-1 journey begins"
    },
    {
      date: "January 2024",
      weight: 188,
      event: "Reached goal weight"
    },
    {
      date: "February 2024",
      weight: 195,
      event: "Started muscle building phase"
    },
    {
      date: "February 2026",
      weight: 218,
      event: "Current weight (muscle + strength)"
    }
  ],
  // Stats from real data
  stats: {
    speedianceVolume: 1296447, // lbs lifted
    totalRuns: 111,
    totalMiles: 265.1,
    bjjMonths: 10
  }
