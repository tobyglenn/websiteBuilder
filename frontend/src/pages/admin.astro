---
// Admin page â€” client-side redirect to homepage for unauthenticated users
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admin - Redirecting...">
  <div class="container mx-auto px-4 py-24 text-center">
    <p class="text-neutral-400">Checking access...</p>
  </div>
</Layout>

<script>
  // Only allow access if admin token is present in localStorage
  const token = localStorage.getItem('admin_token');
  if (!token || token !== 'toby-admin') {
    window.location.replace('/');
  }
</script>
